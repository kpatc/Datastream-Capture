{
  "name": "postgres-cdc-demo",
  "config": {
    "connector.class": "io.debezium.connector.postgresql.PostgresConnector",
    "tasks.max": "1",
    "plugin.name": "pgoutput",

    "database.hostname": "postgres",
    "database.port": "5432",
    "database.user": "cdcdemo",
    "database.password": "cdcdemo",
    "database.dbname": "demo_db",

    "topic.prefix": "postgres-server",

    "slot.name": "debezium_slot",
    "publication.name": "dbz_publication",

    "table.include.list": "public.demo_table",

    "database.history.kafka.bootstrap.servers": "kafka:29092",
    "database.history.kafka.topic": "schema-changes.demo_db",

    "include.schema.changes": "true"
  }
}
